{
  "name": "@dadi/cli-core",
  "version": "2.1.0",
  "description": "A command-line tool for installation and customisation of the DADI platform",
  "main": "index.js",
  "bin": {
    "dadi": "bin/dadi.js"
  },
  "preferGlobal": "true",
  "keywords": [],
  "author": "eb@dadi.co",
  "license": "ISC",
  "dependencies": {
    "anyid": "1.0.1",
    "cli-format": "^3.0.9",
    "cli-table": "^0.3.1",
    "colors": "^1.1.2",
    "decompress": "^4.2.0",
    "deepmerge": "^1.5.1",
    "fs-extra": "^4.0.2",
    "inquirer": "^3.2.0",
    "latest-version": "^3.1.0",
    "mri": "^1.1.0",
    "node-fetch": "^1.7.3",
    "object-path": "^0.11.4",
    "ora": "^1.3.0",
    "registry-url": "^3.1.0",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "semver-compare-range": "0.0.3"
  },
  "devDependencies": {
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^21.2.1",
    "nock": "^9.0.14",
    "pmock": "^0.2.3",
    "standard": "^10.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dadi/cli.git"
  },
  "bugs": {
    "url": "https://github.com/dadi/cli/issues"
  },
  "homepage": "https://github.com/dadi/cli",
  "scripts": {
    "test": "standard --fix && jest && node test/utils/coverage.js",
    "test-dev": "jest --watch",
    "build": "pkg index.js -c package.json -o bin/dadi"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "bin/**/*.js",
      "entryPoints/**/*.js",
      "lib/**/*.js"
    ],
    "coverageReporters": [
      "cobertura",
      "html",
      "text"
    ],
    "testMatch": [
      "*/**/test/**/*.test.js"
    ],
    "moduleNameMapper": {
      "/Users/fakeuser/fakedir/node_modules/@dadi/api": "<rootDir>/test/helpers/MockDadiApi.js",
      "(.*)/@dadi/mock-app$": "<rootDir>/test/helpers/MockDadiApi.js",
      "(.*)/@dadi/mock-app/package.json$": "<rootDir>/test/helpers/mockPackage.json",
      "(.*)/node_modules/@dadi/some-app/some-file.json$": "<rootDir>/test/helpers/mockPackage.json"
    }
  },
  "standard": {
    "ignore": [
      "test/**/*"
    ]
  },
  "pkg": {
    "targets": [
      "node7-alpine-x64",
      "node7-linux-x64",
      "node7-macos-x64",
      "node7-win-x64"
    ]
  }
}
